<UserControl x:Class="WpfApp3.E.SubUserControl.ESubUserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfApp3.E"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:subUserControl="clr-namespace:WpfApp3.E.SubUserControl"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <subUserControl:ESubUserControl1ViewModel />
    </UserControl.DataContext>
    <dxmvvm:Interaction.Behaviors>
        <dxmvvm:CurrentWindowService />
        <dxmvvm:EventToCommand EventName="Loaded" Command="{Binding OnLoadedCommand}" />
    </dxmvvm:Interaction.Behaviors>
    <StackPanel>
        <Label>EUserControl</Label>
        <Label Content="UserName"/>
        <Label Content="{Binding UserName}"/>
        <Button Content="Click" Command="{Binding ButtonClickCommand}" />
    </StackPanel>
</UserControl>